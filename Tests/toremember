    read(q.socket, n, 50);
    printf("%s", n);
    closeSocket(q.socket);
    closeSocket(socket);*/

    int sock = newUDPSocket_server(5577);
    recvfrom( sock, n, sizeof(n) - 1, 0, NULL, 0 );
    printf("%s", n);
    closeSocket(sock);
