    connection_t sock = newUDPSocket_client(5577, "127.0.0.1");
    sendto(sock.socket, "CIAO CRISTO DIO", 15, 0, (struct sockaddr *) &sock.clientData, sock.clientDataLenght);
    closeSocket(sock.socket);


    /*int socket = newSocket_server(5577);
